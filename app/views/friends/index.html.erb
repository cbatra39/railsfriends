
<% if user_signed_in?%>
  <h1>Friends</h1>

  <div id="friends">

    <table class= "table table-striped table-hover">
      <thead class ="table dark">
        <th>Name</th>
        <th>Email</th>
        <th>Phone No</th>
        <th>Instagram</th>
        <th></th>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <% if friend.user == current_user%>
          <%= render friend %>
          <%end%>
        <% end %>
      </tbody>
    </table>

  </div>

  <%= link_to "New friend", new_friend_path ,class:"btn btn-secondary mb-3" %>
<%else%>
    <h1> Hello Visitor</h1>
    <h5>Create an Account or Sign In to start</h5>
<%end%>  


